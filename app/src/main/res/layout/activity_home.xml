<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linearLayout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="2dp"
        android:id="@+id/linearLayout">

        <LinearLayout
            android:id="@+id/lv_homepage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_homepage"
                android:layout_width="@dimen/activity_home_dibudaohang_size"
                android:layout_gravity="center"
                android:layout_height="@dimen/activity_home_dibudaohang_size"
                android:src="@drawable/btn_homepage" />

            <TextView
                android:id="@+id/tv_homepage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="@color/dibudaohang"
                android:text="@string/homeActivity_homepage" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lv_store"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_store"
                android:layout_width="@dimen/activity_home_dibudaohang_size"
                android:layout_height="@dimen/activity_home_dibudaohang_size"
                android:layout_gravity="center"
                android:src="@drawable/btn_store" />

            <TextView
                android:id="@+id/tv_store"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="@color/dibudaohang"
                android:text="@string/homeActivity_store" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lv_sign_in"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_sign_in"
                android:layout_width="@dimen/activity_home_dibudaohang_size"
                android:layout_gravity="center"
                android:layout_height="@dimen/activity_home_dibudaohang_size"
                android:src="@drawable/btn_sign_in" />

            <TextView
                android:id="@+id/tv_sign_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="@color/dibudaohang"
                android:text="@string/homeActivity_sign_in" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lv_schedule"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_schedule"
                android:layout_width="@dimen/activity_home_dibudaohang_size"
                android:layout_gravity="center"
                android:layout_height="@dimen/activity_home_dibudaohang_size"
                android:src="@drawable/btn_schedule" />

            <TextView
                android:id="@+id/tv_schedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="@color/dibudaohang"
                android:text="@string/homeActivity_schedule" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lv_my"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_my"
                android:layout_width="@dimen/activity_home_dibudaohang_size"
                android:layout_gravity="center"
                android:layout_height="@dimen/activity_home_dibudaohang_size"
                android:src="@drawable/btn_my" />

            <TextView
                android:id="@+id/tv_my"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="@color/dibudaohang"
                android:text="@string/homeActivity_my" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>